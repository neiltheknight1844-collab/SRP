package com.example.srpproto.client;

import com.example.srpproto.entity.SrpBasicMob;
import net.minecraft.client.model.CowModel;
import net.minecraft.client.model.geom.ModelLayers;
import net.minecraft.client.renderer.entity.EntityRendererProvider;
import net.minecraft.client.renderer.entity.MobRenderer;
import net.minecraft.resources.ResourceLocation;

public class SrpQuadrupedRenderer extends MobRenderer<SrpBasicMob, CowModel<SrpBasicMob>> {

    public SrpQuadrupedRenderer(EntityRendererProvider.Context ctx) {
        super(ctx, new CowModel<>(ctx.bakeLayer(ModelLayers.COW)), 0.7F);
    }

    @Override
    public ResourceLocation getTextureLocation(SrpBasicMob entity) {
        return entity.def().texture();
    }
}
